<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ececec"
        android:gravity="center"
        android:padding="20dp"
        android:text="Notification Permission"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCheckNotificationPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Notification Permission" />

        <Button
            android:id="@+id/btnAskNotificationPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASK Notification Permission" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ececec"
        android:gravity="center"
        android:padding="20dp"
        android:text="Wifi NearBy Permission"
        android:textColor="@color/black"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btnCheckNearByPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check NearBy Permission" />

        <Button
            android:id="@+id/btnAskNearByPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask NearBy Permission" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ececec"
        android:gravity="center"
        android:padding="20dp"
        android:text="Storage Permission"
        android:textColor="@color/black"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btnCheckMediaPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Media Permission" />

        <Button
            android:id="@+id/btnAskMediaPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASK Media Permission" />


    </LinearLayout>


</LinearLayout>